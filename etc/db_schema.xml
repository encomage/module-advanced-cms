<?xml version="1.0"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="cms_block">
        <column xsi:type="mediumtext" name="custom_css" nullable="true" comment="Custom CSS"/>
        <column xsi:type="mediumtext" name="custom_js" nullable="true" comment="Custom JS"/>
        <column xsi:type="smallint" name="use_as_pop_up" padding="6" unsigned="false" nullable="true"
                comment="As Pop up"/>
        <column xsi:type="varchar" name="pop_up_trigger_label" nullable="true" length="255" comment="Pop up trigger label"/>
    </table>
    <table name="cms_page">
        <column xsi:type="mediumtext" name="custom_css" nullable="true" comment="Custom CSS"/>
        <column xsi:type="mediumtext" name="custom_js" nullable="true" comment="Custom JS"/>
    </table>
</schema>
